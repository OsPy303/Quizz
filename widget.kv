<GameScreen1,GameScreen2>:
	canvas:
		Rectangle:
			size: self.size
			pos: self.pos
			source: data.BACKGROUND


<ScoreLabel@Label>:
	pos_hint: {'center_x': .90, 'center_y': .96}
	font_size: 25
	bold: True

<QuestionLabel@Label>:
	font_size: 30
	text_size: (root.width -2, None)
	bold: True
	halign: 'center'
	pos_hint: {'center_x': .5, 'center_y': .75}


<AnswereButton@Button>:
