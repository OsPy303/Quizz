<GameOver>:
	name: "over"
	FloatLayout:
		canvas:
			Rectangle:
				size: self.size
				pos: self.pos
				source: data.BACKGROUND

		Label:
			markup: True
			text: "[font=Alenia.ttf][size=35]GAME OVER[/size][/font]"
			font_size: 35
			pos_hint: {'center_x': .5, 'center_y': .90}
			bold: True


		Label:
			text: root.finalScore
			font_size: 25
			font_name: 'aller_bold.ttf'
			halign: 'center'
			valign: 'center'
			text_size: (root.width, None)
			bold: True
